CAMERAS_CONFIG={
    "cameras": [
        {
            "id": 1,
            "name": "Front Door",
            "url": "rtsp://username:password@camera-ip:port/stream-url",
            "features": {
                "human_detection": true,
                "person_identification": false,
                "sound_alert": true,
                "confidence_threshold": 0.6
            }
        },
        {
            "id": 2,
            "name": "Back Door",
            "url": "rtsp://username:password@camera-ip:port/stream-url",
